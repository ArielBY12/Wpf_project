<Window x:Class="WpfApp.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Processor" Height="350" Width="525">
    <Grid Background="Cyan">
        <Button Content="Upload image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Click="UploadImage_Click" Margin="98,266,0,0" Background="#FF22EF1B"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,50,0,0" Width="380">
            <Image x:Name="ImageR" Width="100" Height="150"/>
            <Image x:Name="ImageG" Width="100" Height="150"/>
            <Image x:Name="ImageB" Width="100" Height="150"/>
            
        </StackPanel>
        <Image x:Name="Main_image"
            HorizontalAlignment="Left" Height="150" Margin="10,92,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Use default image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Click="UseDefaultImage_Click" Margin="287,266,0,0" Background="#FF22EF1B"/>
    </Grid>
</Window>